{
  "name": "exa-cli",
  "version": "0.1.1",
  "type": "module",
  "bin": {
    "exa": "dist/bin/exa.js",
    "exa-cli": "dist/bin/exa.js"
  },
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "dev": "bun run build && node dist/bin/exa.js",
    "lint": "biome check .",
    "format": "biome format --write .",
    "prepublishOnly": "npm run build"
  },
  "dependencies": {
    "@oclif/core": "^4.8.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@types/node": "^25.0.3",
    "typescript": "^5.9.3"
  },
  "oclif": {
    "commands": "./dist/commands",
    "bin": "exa",
    "additionalHelpFlags": ["-h"]
  },
  "files": ["dist", "README.md", "docs/spec.md", "package.json"]
}
